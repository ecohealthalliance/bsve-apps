body
  font-family 'Lato', sans-serif
  font-weight 300
  background #F5F5F5 !important

a
  color inherit
  text-decoration none
  display block
  transition .1s ease-in-out
  &:hover
    text-decoration none
  &.goto-app
    &:active
      background #f3f3f3
  &.info
    &:active
      background #f3f3f3

.eha-apps-container
  margin-top 50px
  max-width 1600px

.eha-app-wide
  width 250px

.eha-app-narrow
  width 150px

.eha-logo
  display block
  margin 20px auto 30px auto
  width 350px
  height 98px
  background-image url("../images/eha-logo-2x.png")
  background-repeat no-repeat
  background-position 0 0
  background-size 350px 98px
  text-indent -9999px

.card
  min-height 400px
  margin-bottom 2rem
  padding-top 1rem
  border 0
  img
    padding-bottom 25px
    padding-top 10px
    display block
    margin auto

.card-block
  padding 0

.card-text
  padding 1.25em
  color #666

span
  display block

.goto-app
  padding-top 15px
  min-height 400px
  color #444
  overflow hidden
  border-radius 4px
  background white
  border 1px solid #e5e5e5
  &::before
    position absolute
    right 10px
    bottom 45px
    content "\f14c"
    font-family "FontAwesome"
    color #e5e5e5
    opacity 0
    font-size 1.3em
    transition opacity .1s ease-in-out
  &:hover
    &::before
      opacity 1

.goto-app:hover,
.goto-app:focus
  text-decoration none
  background #f9f9f9
  border-color #CCC

.goto-app:hover .card-text,
.goto-app:focus .card-text
  color #333

.info
  position absolute
  min-height 1px
  bottom 1px
  left 1px
  right 1px
  padding 10px
  text-align center
  display block
  border-top 1px solid #e5e5e5
  color #999
  font-size .8em
  background-color white
  border-bottom-left-radius 4px
  border-bottom-right-radius 4px
  font-weight 400
  &:hover
    background #f9f9f9
    color #333

.container,
.container-fluid
  padding-right 1.9375rem
  padding-left 1.9375rem

.footer
  h4
    display none
