$grid-gutter-width = 15px
$screen-sm-min = 768px
$screen-md-min = 992px
$screen-lg-min = 1200px
$apps = flirt tater spa birt grits grits-embed grrs eidr niam good-question

body
  font-family 'Lato', sans-serif
  font-weight 300
  background #F5F5F5 !important

a
  color inherit
  text-decoration none
  display block
  transition .1s ease-in-out
  &:hover
    text-decoration none
  &.goto-app
    &:active
      background #f3f3f3
  &.info
    &:active
      background #f3f3f3

.eha-apps-container
  margin-top 50px
  max-width 1600px

.eha-app-narrow
  width 150px

.eha-logo
  display block
  margin 20px auto 30px auto
  width 350px
  height 98px
  background-image url("../images/eha-logo.svg")
  background-repeat no-repeat
  background-position 0 0
  background-size 350px 98px
  text-indent -9999px

.card
  min-height 360px
  margin-bottom 2rem
  padding-top 1rem
  border 0
  font-size .95em
  h2
    display none
  .logo
    display block
    margin auto
    min-height 150px
    max-width 80%
    background-size cover
    &.x-small
      max-width 50%
    &.small
      max-width 65%
    &.large
      max-width 85%
  for $app in $apps
    .{$app}
      background url('../images/' + $app + '-logo.svg') no-repeat center center

.card-block
  padding 0

.card-text
  padding 1.25em 1.5em
  color #666

span
  display block

.goto-app
.coming-soon
  padding-top 15px
  min-height 360px
  color #444
  overflow hidden
  border-radius 4px
  background white
  border 1px solid #e5e5e5

.goto-app
  &::before
    position absolute
    right 10px
    bottom 45px
    content "\f14c"
    font-family "FontAwesome"
    color #e5e5e5
    opacity 0
    font-size 1.3em
    transition opacity .1s ease-in-out
  &:hover
    &::before
      opacity 1

.no-description
  &::before
    right 50%
    transform translate(0, -50%)

.goto-app:hover,
.goto-app:focus
  text-decoration none
  background #f9f9f9
  border-color #CCC

.goto-app:hover .card-text,
.goto-app:focus .card-text
  color #333

.coming-soon
  position relative
  &::after
    content 'Available soon'
    font-family 'Lato'
    letter-spacing .05em
    position absolute
    bottom 50px
    width 100%
    text-align center
    color #CCC
    text-transform uppercase
  &:hover
    &::after
      color #999
      font-weight 400

.info
.coming-soon-link
  position absolute
  min-height 1px
  bottom 1px
  left 1px
  right 1px
  padding 10px
  text-align center
  display block
  border-top 1px solid #e5e5e5
  color #999
  font-size .8em
  background-color white
  border-bottom-left-radius 4px
  border-bottom-right-radius 4px
  font-weight 400
.info
  &:hover
    background #f9f9f9
    color #333
.coming-soon-link
  color #CCC
  &:hover
    color #CCC

.container,
.container-fluid
  padding-right 1.9375rem
  padding-left 1.9375rem

.footer
  h4
    display none

// Based on Foundation's block grid system

[class*="block-grid-"]
  display block
  margin -($grid-gutter-width / 2)
  padding 0
  clearfix()

.block-grid-item
  display inline
  margin 0
  padding ($grid-gutter-width / 2)
  height auto
  list-style none

block-grid($per-row)
  & > .block-grid-item
    width (100% / $per-row)
    &:nth-of-type(n)
      clear none
    &:nth-of-type({$nth-equation}n+1)
      clear both

block-grids($size)
  if match('sm', $size)
    .block-grid-item
      float left
  for $num in (1..12)
    .block-grid-{$size}-{$num}
      block-grid($num)

block-grids(xs)

@media (min-width: $screen-sm-min)
  block-grids(sm)
@media (min-width: $screen-md-min)
  block-grids(md)
@media (min-width: $screen-lg-min)
  block-grids(lg)
