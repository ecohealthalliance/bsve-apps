  head
    title EHA App Dashboard
    meta(charset='UTF-8')
    meta(name='description', content='A suite of applications developed by EcoHealth Alliance which aid in disease forecasting and data analysis.')
    meta(name='keywords', content='disease forecasting, data analysis, threat, annotation')
    link(rel='shortcut icon', type='image/x-icon', href='favicon.ico')
    link(rel='stylesheet', href='styles/main.css')
    script(src='scripts/main.js')
    link(href='//fonts.googleapis.com/css?family=Lato:300,400', rel='stylesheet', type='text/css')
